<h2>Edit Profile</h2>

</br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%# Email %>

    <div class="field">
      <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
    </div>

    </br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

  <%# Password %>

    <div class="field">
      <%= f.password_field :password, class:"form-control", placeholder:"New password (6 characters minimum)", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <% end %>
    </div>

  </br>

  <%# Password Confirmation %>

    <div class="field">
      <%= f.password_field :password_confirmation, class:"form-control", placeholder:"New password confirmation", autocomplete: "new-password" %>
    </div>

    </br>

  <%# Current Password %>

    <div class="field">
      <%= f.password_field :current_password, class:"form-control", placeholder:"Current password (we need this to confirm your changes)", autocomplete: "current-password" %>
    </div>

    </br>

  <%# Update Password %>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-secondary" %>
    </div>
    <% end %>

</br>

<%# Cancel My Account %>

  <div> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></div>

<%# Back Link %>

</br>
